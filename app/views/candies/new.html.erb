<h1>Create a new candy</h1>


<%= form_for(@candy, url: shop_candies_path ,html: {multipart: true}) do |f| %>
	<div class="form-group">
		<p>
		  <%= f.label :candy_name %><br>
		  <%= f.text_field :candy_name, :class => 'form-control title' %>
		</p>
		<p>
		  <%= f.submit %>
		</p>
	</div>
<% end %>